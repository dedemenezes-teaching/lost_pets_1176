<%= image_tag "http://source.unsplash.com/featured/?#{@pet.species}", alt: @pet.name, width: 200 %>
<h1><%= @pet.name %></h1>

<p><%= @pet.address %></p>
<p><%= @pet.species %></p>
<p>Found <%= @pet.found_days_ago %> days ago</p>

<a href=""></a>
<%= link_to 'Back to pets', pets_path %>
<%= link_to 'Edit this pet', edit_pet_path(@pet) %>
<%= link_to 'X', pet_path(@pet), data: { turbo_method: 'delete', turbo_confirm: 'Remove pet?' } %>
